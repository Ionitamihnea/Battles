<% include partials/header %>
<div id="pixiCanvas" class="hidden-xs"></div>
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div id="battles-list" class="col-xs-12">
                <div class="filter-group row">
                    <div class="form-group col-xs-12 col-sm-12 col-md-8">
                        <input type="text" id="searchBar" class="search form-control" placeholder="Search countries ğŸ—¡ï¸" onkeydown="updateList()" />
                    </div>
                    <div class="form-group col-xs-12 col-sm-12 col-md-4">
                        <div class="radio-inline">
                            <label>
                                <input class="filter-all" type="radio" value="all" name="combatant" id="combatant-all" checked /> All
                            </label>
                        </div>
                        <div class="radio-inline">
                            <label>
                                <input class="filter" type="radio" value="invader" name="combatant" id="combatant-invader" /> Invader
                            </label>
                        </div>
                        <div class="radio-inline">
                            <label>
                                <input class="filter" type="radio" value="defender" name="combatant" id="combatant-defender" /> Defender
                            </label>
                        </div>
                        <button class="btn btn-warning" onclick="resetList();">Clear filters</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <h2 class="text-center">Attackers</h1>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <h2 class="text-center">Defenders</h1>
                    </div>
                </div>
                <ul class="list">
                    <% battleKeys.forEach(function(battle){ %>
                        <% const invader = battles[battle].inv.id %>
                        <% const defender = battles[battle].def.id %>
                        <div class="row">
                            <li>
                                <div class="col-lg-1 hidden-md hidden-sm hidden-xs">
                                    <img src="/dist/img/sword.png" class="img-rounded img-responsive img-6vh">
                                </div>
                                <h3 class="invaderName col-xs-6 col-sm-5 col-lg-4 col-md-5 text-left">
                                    <%= countries[invader].name %>
                                </h3>
                                <div class="col-lg-2 col-md-2 col-sm-2 hidden-xs">
                                    <img src="/dist/img/swords.png" class="img-rounded img-responsive img-6vh center-block">
                                </div>
                                <h3 class="defenderName col-xs-6 col-sm-5 col-lg-4 col-md-5 text-right">
                                    <%= countries[defender].name %>
                                </h3>
                                <div class="col-lg-1 hidden-md hidden-sm hidden-xs">
                                    <img src="/dist/img/shield.png" class="img-rounded img-responsive img-6vh">
                                </div>
                            </li>
                        </div>
                    <% }); %>
                </ul>
                <div class="no-result">
                    <div class="row col-lg-12 hidden-xs">
                        <img src="/dist/img/helmet.png" class="img-rounded img-responsive img-20vh center-block">
                    </div>
                    <div class="row">
                        <h1 class="col-lg-12 text-center">No results</h1>
                    </div>
                </div>
                <div class="text-center">
                    <ul class="pagination pagination-lg"></ul>
                </div>
            </div>
        </div>
    </div>
</div>
<% include partials/footer %>