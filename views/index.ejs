<% include partials/header %>
<div id="pixiCanvas"></div>
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div id="battles-list" class="col-xs-12">
                <div class="filter-group row">
                    <div class="form-group col-xs-12 col-sm-12 col-md-8">
                        <input type="text" id="searchBar" class="search form-control" placeholder="Search countries 🗡️" onkeydown="updateList()" />
                    </div>
                    <div class="form-group col-xs-12 col-sm-12 col-md-4">
                        <div class="radio-inline">
                            <label>
                                <input class="filter-all" type="radio" value="all" name="combatant" id="combatant-all" checked /> All
                            </label>
                        </div>
                        <div class="radio-inline">
                            <label>
                                <input class="filter" type="radio" value="invader" name="combatant" id="combatant-invader" /> Invader
                            </label>
                        </div>
                        <div class="radio-inline">
                            <label>
                                <input class="filter" type="radio" value="defender" name="combatant" id="combatant-defender" /> Defender
                            </label>
                        </div>
                        <button class="btn btn-warning" onclick="resetList();">Clear filters</button>
                    </div>
                    <div class="form-group col-xs-12 col-sm-12">
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <h1 class="text-center">Attackers</h1>
                    </div>
                    <div class="col-lg-6">
                        <h1 class="text-center">Defenders</h1>
                    </div>
                </div>
                <ul class="list">
                    <% battleKeys.forEach(function(battle){ %>
                        <% const invader = battles[battle].inv.id %>
                        <% const defender = battles[battle].def.id %>
                        <div class="row">
                            <li>
                                <div class="col-lg-1">
                                    <img src="/dist/img/sword.png" class="img-rounded img-responsive img-6vh">
                                </div>
                                <h2 class="invaderName col-lg-4 text-left">
                                    <%= countries[invader].name %>
                                </h2>
                                <div class="col-lg-2">
                                    <img src="/dist/img/swords.png" class="img-rounded img-responsive img-6vh center-block">
                                </div>
                                <h2 class="defenderName col-lg-4 text-right">
                                    <%= countries[defender].name %>
                                </h2>
                                <div class="col-lg-1">
                                    <img src="/dist/img/shield.png" class="img-rounded img-responsive img-6vh">
                                </div>
                            </li>
                        </div>
                    <% }); %>
                </ul>
                <div class="no-result">No Results</div>
                <div class="text-center">
                    <ul class="pagination"></ul>
                </div>
            </div>
        </div>
    </div>
</div>
<% include partials/footer %>